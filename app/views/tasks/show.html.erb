<h1><%= @task.title %></h1>
<p>
  <%= @task.details %>
</p>
<%if @task.completed  %>
<p><input type="checkbox" checked> Task completed</p>
<% else %>
<p><input type="checkbox"> Task yet to be completed</p>
<% end %>
<p>
  <%= link_to "Edit task", edit_path %>
</p>
<p>
  <%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>
<p>
  <%= link_to "Back to list", tasks_path %>
</p>